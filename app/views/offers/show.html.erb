
<div class="container my-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-8">
      <div class="card p-3 py-4">
        <div class="text-center">
          <%= cl_image_tag(current_user.photo_blob.key, width: 100, height: 100,) %>
        </div>
        <div class="text-center mt-3">
          <span class="bg-secondary p-1 px-4 rounded text-white">space for a possible category?</span>
          <h5 class="mt-2 mb-0"><%= @offer.title%></h5>
          <div class="px-4 mt-1">
            <p class="fonts"><%= @offer.description %></p>
          </div>
          <div class="card p-3">
            <span>Tarif <%= @offer.hourly_rate%> CHF/h</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card p-3 py-4">
        <%= render "shared/booking_form", offer: @offer, booking: @booking %>
      </div>
    </div>
  </div>
</div>
